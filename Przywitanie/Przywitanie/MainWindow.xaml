<Window x:Class="Przywitanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Przywitanie"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="75,50,0,0" VerticalAlignment="Top" Width="135" Height="60" FontFamily="Times New Roman" FontSize="26.667" FontWeight="Bold" Click="btnStart_Click" Background="#FFB03D3D" BorderBrush="#FF1CB8DA" Foreground="#FFEAE00B"/>
        <Button x:Name="btnTime" Content="Czas" HorizontalAlignment="Left" Margin="75,150,0,0" VerticalAlignment="Top" Width="135" Height="60" FontFamily="Times New Roman" FontSize="26.667" FontWeight="Bold" MouseEnter="btnTime_MouseEnter" MouseLeave="btnTime_MouseLeave"/>    
    </Grid>
</Window>
